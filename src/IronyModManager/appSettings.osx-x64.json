{
  "Steam": {
    "@jdt.replace": [
      {
        "@jdt.path": "$.GameHandlerPath",
        "@jdt.value": "IronyModManager.GameHandler"
      },
      {
        "@jdt.path": "$.UseGameHandler",
        "@jdt.value": false
      }
    ]
  },
  "Updates": {
    "@jdt.replace": [
      {
        "@jdt.path": "$.DisableInstallOnly",
        "@jdt.value": true
      }
    ]
  },
  "App": {
    "@jdt.replace": {
      "@jdt.path": "$.StoragePath",
      "@jdt.value": "%AppData%/Mario"
    }
  }
}
