<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="280" d:DesignHeight="40"
             MaxWidth="280" MaxHeight="40" MinWidth="100"
             x:Class="IronyModManager.Views.Controls.ThemeControlView">
  <Panel>
    <StackPanel Orientation="Horizontal">
      <TextBlock Text="{Binding ThemeText}" HorizontalAlignment="Left" VerticalAlignment="Center"
                 Margin="0,0,10,0"></TextBlock>
      <ComboBox Items="{Binding Themes}" SelectedItem="{Binding SelectedTheme}"
                MinHeight="25" MinWidth="80" HorizontalAlignment="Right" Margin="0,0,10,0">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <ComboBoxItem IsSelected="{Binding IsSelected}" Content="{Binding Name}"></ComboBoxItem>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
    </StackPanel>
  </Panel>
</UserControl>